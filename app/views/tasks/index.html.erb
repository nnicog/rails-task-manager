<h1> My Tasks <h1><br>
<% @tasks.each do |task| %>
  <div>
    <% if (task.completed) %>
      <i class="far fa-check-square"></i>
    <% else %>
      <i class="far fa-square"></i>
    <% end %>
    <%= link_to "#{task.title}", task_path(task[:id]) %>
  </div>
<% end %>
<%= link_to "+ Add new task", tasks_new_path %>
